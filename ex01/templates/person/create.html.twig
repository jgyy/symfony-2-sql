<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Create Person Table</title>
        <style>
            .error { color: red; }
            .success { color: green; }
            .debug-info {
                margin-top: 20px;
                padding: 10px;
                background-color: #f5f5f5;
                border: 1px solid #ddd;
            }
            .button {
                display: inline-block;
                padding: 10px 20px;
                background-color: #007bff;
                color: white;
                text-decoration: none;
                border-radius: 5px;
                margin-top: 20px;
            }
        </style>
    </head>
    <body>
        <h1>Person Table Creation</h1>
        <p class="{{ status|default('') }}">{{ message|default('') }}</p>
        
        {% if debug_info is defined %}
            <div class="debug-info">
                <h2>Debug Information</h2>
                {% for key, value in debug_info %}
                    <div>
                        <strong>{{ key|title }}:</strong> 
                        <pre>{{ value }}</pre>
                    </div>
                {% endfor %}
            </div>
        {% endif %}

        <a href="{{ path('create_table') }}" class="button">Create Table</a>
    </body>
</html>
